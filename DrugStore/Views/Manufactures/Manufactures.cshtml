@model IEnumerable<DrugStore.Models.Manufacturer>
@{
    ViewBag.Title = "Danh sách Nhà sản xuất";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section id="admin-content" class="p-3">
    <h3 class="mb-3">Danh sách nhà sản xuất</h3>
    <div class="row">
        <div class="col-md-8">
            <a href="/Manufactures/AddManufactures" class="btn btn-primary">Thêm mới</a>
        </div>
        <div class="col-md-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Tìm kiếm...">
                <div class="input-group-append">
                    <span class="input-group-text" id="basic-addon2"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-hover mt-3">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên nhà sản xuất</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @{
                var manu = Model.ToList();
            }
            @for (var i = 1; i <= manu.Count(); i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@manu[i - 1].Name</td>
                    <td>
                        <a href="/Manufactures/EditManufactures/@manu[i-1].Id" class="btn btn-sm btn-info">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="/Manufactures/Detroys/@manu[i-1].Id" class="btn btn-sm btn-danger">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    @{
        if (Session["Detroys_Manufacturer"] != null)
        {
            <script>
            alert('@Session["Detroys_Manufacturer"]');
            </script>
            Session.Remove("Detroys_Manufacturer");
        }
    }
</section>




