@model IEnumerable<DrugStore.Models.Manufacturer>
<li class="dropdown">
    <a href="#" class="dropdown-toggle nav-stylehead" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        Nhà sản xuất
        <span class="caret"></span>
    </a>
    @{
        var manufacturers = Model.ToList();
    }
    <ul class="dropdown-menu multi-column columns-3">
        <div class="agile_inner_drop_nav_info">
            <div class="col-sm-6 multi-gd-img">
                <ul class="multi-column-dropdown">
                    @for (var i = 0; i < (int)(manufacturers.Count() / 2); i++)
                    {
                        <li>
                            <a style="text-transform: uppercase" href="/Home/ProductsManufacture/@manufacturers[i].Id">@manufacturers[i].Name</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-sm-6 multi-gd-img">
                <ul class="multi-column-dropdown">
                    @for (var i = (int)(manufacturers.Count() / 2); i < manufacturers.Count(); i++)
                    {
                        <li>
                            <a style="text-transform: uppercase" href="/Home/ProductsManufacture/@manufacturers[i].Id">@manufacturers[i].Name</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </ul>
</li>


