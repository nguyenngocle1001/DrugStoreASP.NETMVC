@model IEnumerable<DrugStore.Models.Category>
<li class="dropdown">
    <a href="#" class="dropdown-toggle nav-stylehead" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        Loại thuốc
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu multi-column columns-3">
        <div class="agile_inner_drop_nav_info">
            <div class="col-sm-4 multi-gd-img">
                @{ 
                    var categorys = Model.ToList();
                }
                <ul class="multi-column-dropdown">
                    @for (var i = 0; i < (int)(categorys.Count() / 2); i++)
                    {
                        <li>
                            <a style="text-transform: uppercase" href="/Home/ProductsCategory/@categorys[i].Cate_Id">@categorys[i].Cate_Name</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-sm-4 multi-gd-img">
                <ul class="multi-column-dropdown">
                    @for (var i = (int)(categorys.Count() / 2); i < categorys.Count() ; i++)
                    {
                        <li>
                            <a style="text-transform: uppercase" href="/Home/ProductsCategory/@categorys[i].Cate_Id">@categorys[i].Cate_Name</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </ul>
</li>
