@model DrugStore.Models.Category
@{
    ViewBag.Title = "EditCategorys";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <section id="admin-content" class="p-3">
        <h3 class="mb-4" style=" text-align: center">Cập nhật thông tin loại thuốc</h3>
        @using (Html.BeginForm("EditCategorys", "Categorys", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Cate_Id)

            <div class="row">
                @Html.ValidationSummary(true)
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tên thuốc</label>
                        @Html.EditorFor(model => model.Cate_Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cate_Name)
                        @ViewData["errorName"]
                    </div>
                    
                    
                </div>
                <div class="col-12 mt-3">
                    <button type="submit" class="btn btn-success">Lưu lại</button>
                    <a class="btn btn-secondary" href="/Categorys/Categorys">Quay lại</a>
                </div>
            </div>
        }


    </section>


