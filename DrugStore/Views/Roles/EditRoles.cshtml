@model DrugStore.Models.Role
@{
    ViewBag.Title = "Chỉnh sửa quyền";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section id="admin-content" class="p-3">
    <h3 class="mb-4 text-center">Chỉnh sửa quyền</h3>
    <form method="post" action="/Roles/EditRoles/@Model.Role_Id">
        <div class="row">
            <div class="col-md-6 m-auto">
                <div class="form-group">
                    <label>Tên quyền</label>
                    <input type="text" value=@Model.Role_Name  name="name" class="form-control" placeholder="tên quyền" />
                    @ViewData["errorName"]
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <input type="text" value="@Model.Description"  name="description" class="form-control" placeholder="mô tả" />
                    @ViewData["errorDescription"]
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Lưu lại</button>
                    <a class="btn btn-secondary" href="/Roles/Roles">Quay lại</a>
                </div>
                @ViewData["notice"]
            </div>
        </div>
    </form>
</section>
